#include<stdio.h> 
#include<stdlib.h>
struct node{  
int coeff;   
int expo;   
struct node* next;  
}*temp,*head=NULL,*head1=NULL,*head2=NULL,*tail=NULL,*newnode;  
struct node* create(struct node* head) 
{               
int co,e,p;        
do{           
newnode=(struct node*)malloc(sizeof(struct node));  
printf("enter the coefficient"); 
scanf("%d",&co);       
printf("enter the exponent");   
scanf("%d",&e); 
newnode->coeff=co;  
newnode->expo=e;   
newnode->next=NULL; 
if(head==NULL)   
{           
head=newnode;  
tail=newnode;  
}        
else 
{  
tail->next=newnode;   
tail=newnode; 
}     
printf("enter 1 to contiue 0 to exit");
fflush(stdin);      
scanf("%d",&p);  
}while(p==1); 
return head; 

}  
void display(struct node* head)
{                           
temp=head;                  
while(temp!=NULL)           
{                           
printf("%dx^%d+",temp->coeff,temp->expo);  
temp=temp->next;                       
}                                            
}                                            
void poly_add(struct node* head1,struct node* head2)    
{                                                   
struct node* temp1;                                
struct node* temp2;                                 
temp1=head1;                                         
temp2=head2;                                         
while(temp1&&temp2)                                  
{                                                    
if(temp1->expo==temp2->expo)                         
{                                                    
printf("%dx^%d+",temp1->coeff+temp2->coeff,temp1->expo);  
temp1=temp1->next;                                  
temp2=temp2->next;                              
}                                              
else if(temp1->expo>temp2->expo)       
{                                    
printf("%dx^%d+",temp1->coeff,temp1->expo); 
temp1=temp1->next;                         
}                                     
else                                 
{                                  
printf("%dx^%d+",temp2->coeff,temp2->expo);   
temp2=temp2->next;   
}                 
}                 
if(temp2==NULL)     
{                  
while(temp!=NULL)     
{                   
printf("%dx^%d+",temp1->coeff,temp1->expo);   
temp1=temp1->next;        
}                  
}                   
else                
{                   
while(temp2!=NULL)  
{                     
printf("%dx^%d+",temp2->coeff,temp2->expo); 
temp2=temp2->next;                          
}                                      
}                                       
}                                      
void main()                            
{                                      
struct node* h1;                       
struct node* h2;                      
printf("first polynomial\n");            
h1=create(head1);                     
printf("second polynomial\n");         
h2=create(head2);                      
printf("two polynomials are\n");       
display(h1);                           
printf("\n");                         
display(h2);                          
printf("\n");                         
printf("addition of polynomials is\n");  
poly_add(h1,h2);                                                                                                                                                            int coeff;                                                                                                                                                            int expo;                                                                                                                                                             struct node* next;                                                                                                                                            }*temp,*head=NULL,*head1=NULL,*head2=NULL,*tail=NULL,*newnode;                                                                                                        struct node* create(struct node* head)                                                                                                                                {                                                                                                                                                                             int co,e,p;                                                                                                                                                           do{                                                                                                                                                                           newnode=(struct node*)malloc(sizeof(struct node));                                                                                                                    printf("enter the coefficient");                                                                                                                                      scanf("%d",&co);                                                                                                                                                